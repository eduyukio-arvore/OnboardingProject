{
  "parser": "@typescript-eslint/parser",
  "parserOptions": { "requireConfigFile": "false", "ecmaVersion": 2020, "sourceType": "module" },
  "rules": {
    "no-unused-vars": "off",
    "curly": "error",
    "strict": "error",
    "@typescript-eslint/no-explicit-any": "error"
  },
  "plugins": ["@typescript-eslint"],
  "env": { "node": true },
  "extends": "eslint:recommended",
  "ignorePatterns": ["types/*.d.ts", "*.json"]
}
